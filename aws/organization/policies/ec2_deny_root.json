{
    "Version": "2012-10-17",
    "Statement": [{
        "Sid": "DenyEc2ForRoot",
        "Effect": "Deny",
        "Action": [
            "ec2:*"
        ],
        "Resource": [
            "*"
        ],
        "Condition": {
            "StringLike": {
                "aws:PrincipalArn": [
                    "arn:aws:iam::*:root"
                ]
            }
        }
    }]
}
